{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noLib": false,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strictFunctionTypes": false,
        "jsx": "preserve",
        "baseUrl": ".",
        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "outDir": "./lib",
        "lib": [
            "dom",
            "esnext"
        ],
        "types": [
            "node"
        ],
        "noImplicitAny": false,
        "skipLibCheck": true,
        "removeComments": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "types/*": [
                "types/*"
            ],
            "@/settings": [
                "src/settings/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "types/**/*.d.ts",
        "types/**/*.ts",
    ],
    "exclude": [
        "node_modules",
    ]
}